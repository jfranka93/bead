<div class="page-header">
    <h1>Bejelentkezés</h1>
</div>

<form class="form-horizontal" method="post" action="/login/login">
    <fieldset>
        <div class="form-group">
            <label for="loginname" class="col-lg-2 control-label">Login nev</label>
            <div class="col-lg-10">
                <input class="form-control" id="loginname" name="loginname" type="text" value="{{data.loginname}}">
            </div>
        </div>
        <div class="form-group">
            <label for="password" class="col-lg-2 control-label">Jelszó</label>
            <div class="col-lg-10">
                <input class="form-control" type="password" id="password" name="password">
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
                <button type="reset" class="btn btn-default">Cancel</button>
                <button type="submit" class="btn btn-primary pull-right">Submit</button>
            </div>
        </div>
    </fieldset>
</form>

<div class="list-group">
  <a href="/login/signup" class="list-group-item">
    Regisztráció
  </a>
</div>